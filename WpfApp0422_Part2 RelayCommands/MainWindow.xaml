<Window x:Class="WpfApp0422_Part2_RelayCommands.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp0422_Part2_RelayCommands"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Width="400">
            <Button FontSize="60" Command="{Binding MessageCommand}">Display</Button>
            <Button FontSize="60" Command="{Binding SendCommand}">Send</Button>
        </StackPanel>
    </Grid>
</Window>
